{
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:jest/recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "env": {
        "jest/globals": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "rules": {
        "require-jsdoc": 0,
        "prettier/prettier": "error",
        "import/prefer-default-export": 0
    },
    "overrides": [
        {
            "files": [
                "**/*.spec.js"
            ],
            "rules": {
                "no-undef": "warn",
                "jest/no-disabled-tests": "warn"
            }
        }
    ]
}
